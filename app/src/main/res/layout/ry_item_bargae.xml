<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            android:id="@+id/view_left"
            android:visibility="gone"
            android:layout_width="0.6dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="#E2E2E2"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/item_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bottle"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/full_warning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/full_warning"
                        android:gravity="center"
                        android:text="暂满"
                        android:textColor="#ffffffff"
                        android:textSize="7sp" />
                </FrameLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饮料瓶"
                    android:textColor="#ff222222"
                    android:textSize="9sp"
                    />
                <ImageView
                    android:id="@+id/item_iv_fen"
                    android:visibility="gone"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/public_flag"/>
            </LinearLayout>

            <TextView
                android:layout_marginBottom="3dp"
                android:layout_marginTop="1dp"
                android:id="@+id/tv_item_perprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0.05元/个"
                android:textColor="#ff666666"
                android:textSize="7sp" />
            <TextView
                android:layout_marginBottom="3dp"
                android:visibility="gone"
                android:id="@+id/tv_item_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/garbage_tip_bg"
                android:gravity="center"
                android:text="当前30个"
                android:textColor="#ffffffff"
                android:textSize="5sp" />
        </LinearLayout>
        <View
            android:id="@+id/view_right"
            android:visibility="gone"
            android:layout_width="0.6dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:background="#E2E2E2"/>
    </LinearLayout>

</LinearLayout>