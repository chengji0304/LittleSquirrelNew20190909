<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="398dp"
        android:background="@drawable/home_page_mid_bg"
        android:orientation="vertical">

        <TextView
            android:id="@id/tv_operate_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="操作流程"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="用户登录"
                android:textColor="#ff0988ff"
                android:textSize="10sp" />

            <TextView
                android:id="@id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="选择类型"
                android:textColor="#ff333333"
                android:textSize="30px" />

            <TextView
                android:id="@id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="#ff333333"
                android:textSize="10sp" />

            <TextView
                android:id="@id/tv_open"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="开箱取货"
                android:textColor="#ff333333"
                android:textSize="10sp" />

            <TextView
                android:id="@id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="关闭箱门"
                android:textColor="#ff333333"
                android:textSize="10sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffcccccc" />


                <TextView
                    android:id="@id/tv_num_01"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/recycler_tv_shape_circle_num_focused"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#ffffffff"
                    android:textSize="9sp" />

                <TextView
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffcccccc" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffcccccc" />


                <TextView
                    android:id="@id/tv_num_01"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/recycler_tv_shape_circle_num_default"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#ffffffff"
                    android:textSize="28px" />

                <TextView
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffcccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffcccccc" />


                <TextView
                    android:id="@id/tv_num_01"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/recycler_tv_shape_circle_num_default"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#ffffffff"
                    android:textSize="9sp" />

                <TextView
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffcccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffcccccc" />


                <TextView
                    android:id="@id/tv_num_01"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/recycler_tv_shape_circle_num_default"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#ffffffff"
                    android:textSize="9sp" />

                <TextView
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffcccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffcccccc" />


                <TextView
                    android:id="@id/tv_num_01"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/recycler_tv_shape_circle_num_default"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#ffffffff"
                    android:textSize="9sp" />

                <TextView
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffcccccc" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_line_05"
                android:layout_width="39dp"
                android:layout_height="1dp"
                android:background="#80999999" />

            <TextView
                android:id="@id/tv_tip_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:text="请输入账号密码"
                android:textColor="#ff333333"
                android:textSize="11sp" />

            <TextView
                android:id="@id/tv_line_06"
                android:layout_width="39dp"
                android:layout_height="1dp"
                android:background="#80999999" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_etAcc"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            >

            <EditText
                android:background="@drawable/recycler_edit_selector_account"
                android:layout_gravity="center"
                android:id="@id/ed_account"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:paddingLeft="66dp"
                android:hint="请输入正确手机号"
                android:inputType="phone"
                android:maxLength="13"
                android:textColor="#ff333333"
                android:textColorHint="#ff999999"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="11sp" />
            <TextView
                android:id="@id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="账号:"
                android:layout_marginLeft="38dp"
                android:textColor="#ff333333"
                android:textSize="11sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_etPwd"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginTop="13dp"
          >

            <EditText
                android:paddingLeft="66dp"
                android:id="@id/ed_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:cursorVisible="false"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="#ff333333"
                android:textColorHint="#ff999999"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="11sp"
                android:background="@drawable/recycler_edit_selector_psw"/>
            <TextView
                android:id="@id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="密码:"
                android:layout_marginLeft="38dp"
                android:textColor="#ff333333"
                android:textSize="11sp" />

        </RelativeLayout>
        <com.panda.littlesquirrel.view.DigitalKeyboard
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:id="@id/recycler_digital_keyboard"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_gravity="center"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>