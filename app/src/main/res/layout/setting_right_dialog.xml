<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="247dp"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:background="@drawable/user_bg_shape_tel_state">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@id/tv_line_01"
                android:layout_width="39dp"
                android:layout_height="1dp"
                android:background="#80999999" />

            <TextView
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:id="@id/tv_tip_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="投口设置成功"
                android:textColor="#ff333333"
                android:textSize="11sp" />
            <TextView
                android:id="@id/tv_line_02"
                android:layout_width="39dp"
                android:layout_height="1dp"
                android:background="#80999999" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/error" />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="开箱占空比:"
            android:textColor="#ff333333"
            android:textSize="9sp" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true" >
            <Button

                android:layout_weight="1"
                android:id="@+id/btn_close"
                android:layout_width="87dp"
                android:layout_height="33dp"
                android:background="@drawable/user_btn_shape_tel_right_ok"

                android:text="取消"
                android:textColor="#ffffffff"
                android:textSize="11.0sp" />
            <Button
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:id="@+id/btn_ok"
                android:layout_width="87dp"
                android:layout_height="33dp"
                android:background="@drawable/user_btn_shape_tel_right_close"

                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="11.0sp" />


        </LinearLayout>
    </LinearLayout>






</RelativeLayout>