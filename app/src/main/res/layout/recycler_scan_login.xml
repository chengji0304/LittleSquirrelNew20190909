<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_wait"
        android:visibility="visible"
        android:layout_width="333dp"
        android:layout_height="398dp"
        android:gravity="center"
        android:background="@drawable/home_page_mid_bg"
        android:orientation="vertical">
        <ImageView

            android:id="@+id/img_init"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/init"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="正在努力加载中…"
            android:textColor="#333333"
            android:textSize="11sp"
            android:gravity="center_vertical"

            android:layout_centerHorizontal="true"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_scan"
        android:visibility="gone"
        android:layout_width="333dp"
        android:layout_height="398dp"
        android:background="@drawable/home_page_mid_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@id/tv_operate_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="操作流程"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="用户登录"
                android:textColor="#ff0988ff"
                android:textSize="10sp" />

            <TextView
                android:id="@id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="选择类型"
                android:textColor="#ff333333"
                android:textSize="10sp" />

            <TextView
                android:id="@id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="#ff333333"
                android:textSize="10sp" />

            <TextView
                android:id="@id/tv_open"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="开箱取货"
                android:textColor="#ff333333"
                android:textSize="10sp" />

            <TextView
                android:id="@id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="关闭箱门"
                android:textColor="#ff333333"
                android:textSize="10sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:id="@id/tv_line_02"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="#ffcccccc" />


                    <TextView
                        android:id="@id/tv_num_01"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:background="@drawable/recycler_tv_shape_circle_num_focused"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#ffffffff"
                        android:textSize="9sp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#ffcccccc" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#ffcccccc" />


                <TextView
                    android:id="@id/tv_num_01"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/recycler_tv_shape_circle_num_default"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#ffffffff"
                    android:textSize="9sp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#ffcccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_weight="1"
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#ffcccccc" />


                <TextView
                    android:id="@id/tv_num_01"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/recycler_tv_shape_circle_num_default"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#ffffffff"
                    android:textSize="9sp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#ffcccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_weight="1"
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#ffcccccc" />


                <TextView
                    android:id="@id/tv_num_01"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/recycler_tv_shape_circle_num_default"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#ffffffff"
                    android:textSize="9sp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#ffcccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_weight="1"
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#ffcccccc" />


                <TextView
                    android:id="@id/tv_num_01"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/recycler_tv_shape_circle_num_default"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#ffffffff"
                    android:textSize="9sp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@id/tv_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#ffcccccc" />
            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:background="@drawable/scan_login_bg">
            <LinearLayout
                android:layout_marginTop="11dp"
                android:layout_marginRight="87dp"
                android:layout_marginLeft="87dp"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:id="@id/tv_line_03"
                    android:layout_width="39dp"
                    android:layout_height="1dp"

                    android:background="#80ffffff" />
                <TextView
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:id="@id/tv_recycler_scan_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="请扫码登录"
                    android:textColor="#ffffffff"
                    android:textSize="11sp" />
                <TextView
                    android:id="@id/tv_line_04"
                    android:layout_width="39dp"
                    android:layout_height="1dp"
                    android:background="#80ffffff" />
            </LinearLayout>
            <ImageView
                android:id="@id/img_recycler_login_qr_code"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:layout_centerInParent="true"
                android:background="@drawable/login_qrcode_border_shape"
                android:padding="3dp"
                android:src="@drawable/login_qrcode" />

            <TextView
                android:layout_alignParentBottom="true"
                android:id="@id/tv_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="推荐使用"
                android:layout_marginBottom="12dp"
                android:textColor="#ffffffff"
                android:textSize="9sp" />
        </RelativeLayout>

        <Button
            android:id="@id/btn_recycler_psw_login"
            android:layout_width="480px"
            android:layout_height="100px"
            android:layout_marginTop="80px"
            android:background="@drawable/recycler_btn_selector_160x33dp"
            android:gravity="center"
            android:text="账号密码登录"
            android:textColor="#ffffffff"
            android:textSize="32px" />

        <TextView
            android:layout_marginTop="34px"
            android:id="@id/tv_tip_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="如扫码未成功，请选择账号密码登录"
            android:textColor="#ff999999"
            android:textSize="30px" />
    </LinearLayout>

</RelativeLayout>