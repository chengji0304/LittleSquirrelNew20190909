<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="333dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_page_tog">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_logo" />

        <LinearLayout
            android:id="@+id/ll_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="68dp"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_service_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/service_tel"
                    android:gravity="center"
                    android:padding="1dp" />

                <TextView
                    android:id="@+id/tv_service_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:gravity="center|left"
                    android:text="客服电话: 021-61172936"
                    android:textColor="#ff333333"
                    android:textSize="9sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_device_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/device_num"
                    android:gravity="center"
                    android:padding="1dp" />

                <TextView
                    android:id="@+id/tv_device_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dip"
                    android:gravity="center|left"
                    android:text="机器编号: 201900032"
                    android:textColor="#ff333333"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_qrcode"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                   <ImageView
                       android:layout_width="78dp"
                       android:layout_height="match_parent" 
                       android:src="@drawable/icon_kfcode"/>
                    <TextView
                        android:layout_marginLeft="1dp"
                        android:textColor="#ff333333"
                        android:layout_marginTop="8dp"
                        android:textSize="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="小\n松\n鼠\n客\n服"/>
                </LinearLayout>

                <Button
                    android:visibility="visible"
                    android:id="@+id/btn_my_recycler"
                    android:layout_width="80dp"
                    android:layout_height="27dp"
                    android:background="@drawable/recycler_btn_shape_portal"
                    android:text="我是回收员"
                    android:textColor="#ffffffff"
                    android:textSize="10sp" />
            </FrameLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>