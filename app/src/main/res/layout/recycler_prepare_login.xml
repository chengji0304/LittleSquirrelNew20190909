<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="333dp"
    android:layout_height="398dp"
    android:background="@drawable/home_page_mid_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="7dp"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:src="@drawable/icon_mobile" />

        <TextView
            android:id="@+id/tv_login_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请使用手机登录"
            android:textColor="#ff333333"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_login_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="请在手机上点击登录\n手机上登录成功会自动开箱哦～"
        android:textColor="#999999"
        android:textSize="12sp" />

    <FrameLayout
        android:id="@+id/ll_login_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="69dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mobile_login" />

        <ImageView
            android:id="@+id/iv_login_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:src="@drawable/icon_login_tip" />
    </FrameLayout>
</LinearLayout>