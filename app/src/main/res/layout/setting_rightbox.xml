<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="398dp"
        android:background="@drawable/home_page_mid_bg"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_line_05"
                android:layout_width="39dp"
                android:layout_height="1dp"
                android:background="#80999999" />

            <TextView
                android:id="@id/tv_tip_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center"
                android:text="右侧箱体校准"
                android:textColor="#ff333333"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@id/tv_line_06"
                android:layout_width="39dp"
                android:layout_height="1dp"
                android:background="#80999999" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="20dp"
            android:text="1、选择箱体"
            android:textColor="#333333"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="87dp"
            android:layout_marginRight="80dp"
            android:orientation="horizontal">

            <TextView
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:background="@drawable/setting_box"
                android:id="@+id/tv_fabric"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ff179bff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="纺织" />

            <TextView
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:gravity="center"
                android:background="@drawable/setting_box_en"
                android:id="@+id/tv_plastic"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="纺织" />

            <TextView
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:background="@drawable/setting_box_en"
                android:id="@+id/tv_metal"
                android:layout_weight="1"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金属" />
        </LinearLayout>
        <Button

            android:id="@+id/btn_openbox"
            android:layout_marginTop="13dp"
            android:background="@drawable/setting_btn_selector"
            android:gravity="center"
            android:text="开箱"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="80dp"
            android:layout_gravity="right"
            android:layout_width="47dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_boxtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="13dp"
            android:text="2、选择箱体"
            android:textColor="#333333"
            android:textSize="10sp" />
        <LinearLayout
            android:layout_marginLeft="87dp"
            android:orientation="horizontal"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:enabled="false"
                android:id="@+id/btn_clear"
                android:layout_marginTop="13dp"
                android:background="@drawable/setting_btn_selector"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="清零"
                android:textSize="10sp"
                android:layout_gravity="right"
                android:layout_width="47dp"
                android:layout_height="20dp" />
            <Button
                android:layout_marginLeft="27dp"
                android:enabled="false"
                android:id="@+id/btn_jiaozhun"
                android:layout_marginTop="13dp"
                android:background="@drawable/setting_btn_selector"
                android:gravity="center"
                android:text="校准"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="right"
                android:layout_width="47dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="13dp"
            android:text="3、称重"
            android:textColor="#333333"
            android:textSize="10sp" />
        <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="73dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button

                android:id="@+id/btn_weight"
                android:gravity="left"
                android:layout_marginTop="13dp"
                android:background="@null"
                android:text="称重"
                android:layout_width="47dp"
                android:layout_height="20dp" />
            <TextView
                android:textSize="14sp"
                android:id="@+id/tv_weight"
                 android:gravity="right|center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="重量40KG"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>