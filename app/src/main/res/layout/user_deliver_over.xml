<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="333dp"
    android:layout_height="398dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home_page_mid_bg">
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ll_none"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="13dp"
            android:layout_marginRight="56dp"
            android:src="@drawable/user_image"
            app:civ_border_color="#24E288"
            app:civ_border_width="1dp" />
        <LinearLayout
            android:layout_marginTop="27dp"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/rel_none"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="感谢投递"
                android:textColor="#ff258cef"
                android:textSize="20sp" />

            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="小松鼠与您一起守护美丽家园！"
                android:textColor="#ff333333"
                android:textSize="11sp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/ll_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_shouyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本次收益为"
                android:textColor="#ff333333"
                android:textSize="11sp" />
           <LinearLayout
               android:layout_marginTop="10dp"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:visibility="gone"
                   android:id="@+id/tv_jifen_value"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="2 环保积分"
                   android:textColor="#ff258cef"
                   android:textSize="20sp" />
               <TextView
                   android:visibility="gone"
                   android:layout_marginLeft="13dp"
                   android:id="@+id/tv_money_value"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="0.06 环保金"
                   android:textColor="#ff258cef"
                   android:textSize="20sp" />
           </LinearLayout>
            <TextView
                android:id="@+id/tv_describe_tip"
                android:layout_marginTop="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已计入你的小松鼠账户"
                android:textColor="#ff333333"
                android:textSize="11sp" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@id/tv_small_routine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center|left"
            android:text="打开微信扫一扫进入小程序查看"
            android:textColor="#ff999999"
            android:textSize="9sp" />
        <ImageView
            android:layout_marginTop="7dp"
            android:id="@id/img_small_routine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/small_routine_02" />
        <LinearLayout
            android:layout_marginTop="37dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_over"
                android:layout_width="133.0dip"
                android:layout_height="33.0dip"
                android:background="@drawable/user_btn_shape_133x33dp_pink"
                android:gravity="center"
                android:text="回到首页"
                android:textColor="#ffffffff"
                android:textSize="11sp" />
            <Button
                android:layout_marginLeft="17dp"
                android:id="@+id/btn_look"
                android:layout_width="133.0dip"
                android:layout_height="33.0dip"
                android:background="@drawable/user_btn_shape_133x33dp_green"
                android:gravity="center"
                android:text="查看废品去向"
                android:textColor="#ffffffff"
                android:textSize="11sp" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="47dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="由于网络问题，收益可能会延迟到账，请耐心等候"
            android:textColor="#ff999999"
            android:textSize="9sp" />
    </LinearLayout>
</RelativeLayout>