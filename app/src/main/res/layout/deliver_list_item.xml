<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="left|center"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="14px">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/img_garbage_icon"
                android:layout_width="20.0dp"
                android:layout_height="20.0dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottle"/>

            <TextView
                android:layout_marginLeft="15px"
                android:id="@+id/tv_garbage__name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="饮料瓶"
                android:textColor="#ff333333"
                android:textSize="28px" />
            <ImageView
                android:id="@+id/iv_garbage_jifen"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginLeft="5px"
                android:layout_width="32px"
                android:layout_height="32px"
                android:src="@drawable/public_flag"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="left|center"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="14px">

            <TextView
                android:layout_marginLeft="50px"
                android:id="@+id/tv_garbage_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="0.34 公斤"
                android:textColor="#ff333333"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:gravity="right|center"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="14px">

            <TextView
                android:id="@+id/tv_garbage_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.02 "
                android:textColor="#ff333333"
                android:textSize="28px" />
        </LinearLayout>
    </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="#CCCCCC"/>

</LinearLayout>