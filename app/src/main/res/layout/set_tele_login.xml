<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="398dp"
        android:background="@drawable/home_page_mid_bg"
        android:orientation="vertical">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:visibility="gone"
               android:layout_gravity="center"
                android:src="@drawable/bottle"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_line_05"
                android:layout_width="39dp"
                android:layout_height="1dp"
                android:background="#80999999" />

            <TextView
                android:id="@id/tv_tip_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:text="请输入账号密码"
                android:textStyle="bold"
                android:textColor="#ff333333"
                android:textSize="11sp" />

            <TextView
                android:id="@id/tv_line_06"
                android:layout_width="39dp"
                android:layout_height="1dp"
                android:background="#80999999" />

        </LinearLayout>

        <LinearLayout

            android:background="@drawable/set_edit_shape"
            android:orientation="horizontal"
            android:id="@+id/ll_etAcc"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            >
            <TextView
                android:id="@id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="账号:"
                android:layout_marginLeft="12dp"
                android:textColor="#ff333333"
                android:textSize="11sp" />
            <EditText
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/ed_account"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cursorVisible="false"
                 android:background="@null"
                android:hint="请输入正确手机号"
                android:inputType="phone"
                android:maxLength="13"
                android:textColor="#ff333333"
                android:textColorHint="#ff999999"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="11sp" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/set_edit_shape"
            android:id="@+id/ll_etPwd"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginTop="13dp">
            <TextView
                android:id="@id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="密码:"
                android:layout_marginLeft="12dp"
                android:textColor="#ff333333"
                android:textSize="11sp" />
            <EditText
                android:layout_weight="1"
                android:background="@null"
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cursorVisible="false"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="#ff333333"
                android:textColorHint="#ff999999"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="11sp" />
        </LinearLayout>
        <com.panda.littlesquirrel.view.DigitalKeyboard
            android:layout_marginTop="53dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:id="@+id/recycler_digital_keyboard"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_gravity="center" />
    </LinearLayout>
</RelativeLayout>