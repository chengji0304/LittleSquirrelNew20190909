<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="900px"
        android:layout_height="wrap_content"
        android:layout_marginTop="333px"
        android:background="@drawable/user_bg_shape_waste_direction"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@id/img_waste_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45px"
            android:src="@drawable/waste_direction" />

        <Button

            android:id="@+id/btn_ok_look"
            android:layout_width="133.0dip"
            android:layout_height="33.0dip"
            android:layout_marginBottom="65px"
            android:layout_marginTop="66px"
            android:background="@drawable/user_btn_shape_waste_direction"
            android:gravity="center"
            android:text="чбошод"
            android:textColor="#ffffffff"
            android:textSize="34px" />
    </LinearLayout>

</RelativeLayout>