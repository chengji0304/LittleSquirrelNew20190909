<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="247dp"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:background="@drawable/user_bg_shape_tel_state">
        <TextView
            android:layout_marginTop="50px"
            android:id="@+id/tv_tip_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="请再次确认手机号码\n它将是您的小松鼠账号噢"
            android:textColor="#ff000000"
            android:textSize="11sp" />

        <TextView
            android:layout_marginTop="17dp"
            android:id="@id/tv_tel_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="167 8903 7890"
            android:textColor="#ff0390ff"
            android:textSize="21sp" />
        <TextView
            android:layout_marginTop="17dp"
            android:id="@id/tv_tip_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="感谢您和小松鼠一起保卫地球，投递结束后\n记得下载小松鼠小程序查看收益噢"
            android:textColor="#ff999999"
            android:textSize="9sp" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true" >
            <Button

                android:layout_weight="1"
                android:id="@+id/btn_close"
                android:layout_width="87dp"
                android:layout_height="33dp"

                android:background="@drawable/user_btn_shape_tel_right_close"
                android:text="关闭"
                android:textColor="#ffffffff"
                android:textSize="11.0sp" />
            <Button
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:id="@+id/btn_ok"
                android:layout_width="87dp"
                android:layout_height="33dp"

                android:background="@drawable/user_btn_shape_tel_right_ok"
                android:text="确认"
                android:textColor="#ffffffff"
                android:textSize="11.0sp" />


        </LinearLayout>
   </LinearLayout>






</RelativeLayout>