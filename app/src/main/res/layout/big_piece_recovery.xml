<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="533dp"
    android:background="@drawable/big_piece_bg_shape">

    <ImageView
        android:id="@id/img_banner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/big_piece_banner" />

    <TextView
        android:id="@id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_banner"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="扫码二维码\n打开微信小程序预约上门回收"
        android:textColor="#ff333333"
        android:textSize="10sp" />

    <ImageView
        android:layout_below="@id/tv_tip"
        android:id="@id/img_routine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:src="@drawable/big_piece_routine" />
</RelativeLayout>