<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="13dp"
    android:layout_marginLeft="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="367.0dp"
        android:background="@drawable/user_bg_shape_protocol"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:id="@id/tv_line_01"
                android:layout_width="39.0dip"
                android:layout_height="1.0dip"
                android:background="#80999999" />


            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_gravity="center"
                android:id="@id/tv_tip_01"
                android:layout_width="79.0dip"
                android:layout_height="16.0dip"
                android:gravity="center|left"
                android:text="小松鼠用户协议"
                android:textColor="#ff333333"
                android:textSize="11.0sp" />

            <TextView
                android:layout_gravity="center"
                android:id="@id/tv_line_02"
                android:layout_width="39.0dip"
                android:layout_height="1.0dip"
                android:background="#80999999" />

        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@id/tv_line_03"
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:layout_marginTop="17dp"
            android:background="#ffd9d9d9" />

        <ScrollView
            android:layout_gravity="center"
            android:layout_width="320.0dp"
            android:layout_height="220.0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:fadeScrollbars="false"

            android:scrollbarThumbVertical="@drawable/user_scrollbar_shape_protocol_indicator"
            android:scrollbarTrackVertical="@drawable/user_scrollbar_shape_protocol_indicator_bg">

            <RelativeLayout
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.panda.littlesquirrel.view.JustifyTextView
                    android:id="@id/tv_protocol"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center|left|top"
                    android:padding="2dp"
                    android:scrollbars="vertical"
                    android:textColor="#ff333333"
                    android:textSize="9.0sp" />
            </RelativeLayout>
        </ScrollView>

        <TextView
            android:id="@id/tv_line_04"
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
           android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
             android:layout_marginTop="14dp"
            android:background="#ffd9d9d9" />

        <Button
            android:id="@id/btn_ok"
            android:layout_width="133.0dip"
            android:layout_height="33.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/user_btn_shape_protocol_ok"
            android:gravity="center"
            android:text="确认"
            android:textColor="#ffffffff"
            android:textSize="11.0sp" />
    </LinearLayout>
</RelativeLayout>