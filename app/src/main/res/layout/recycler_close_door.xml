<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="333dp"
       android:layout_height="398dp"
       android:gravity="center_horizontal"
       android:background="@drawable/home_page_mid_bg">


       <TextView
           android:id="@id/tv_operate_tip"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"
           android:gravity="center|left"
           android:text="操作流程"
           android:textColor="#ff333333"
           android:textSize="12sp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="14dp"
           android:layout_marginLeft="7dp"
           android:layout_marginRight="7dp"
           android:layout_marginTop="18dp"
           android:orientation="horizontal">

           <TextView
               android:id="@id/tv_login"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:text="用户登录"
               android:textColor="#ff333333"
               android:textSize="10sp" />

           <TextView
               android:id="@id/tv_select"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:text="选择类型"
               android:textColor="#ff333333"
               android:textSize="10sp" />

           <TextView
               android:id="@id/tv_pay"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:text="确认支付"
               android:textColor="#ff333333"
               android:textSize="10sp" />

           <TextView
               android:id="@id/tv_open"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:text="开箱取货"
               android:textColor="#ff333333"
               android:textSize="10sp" />

           <TextView
               android:id="@id/tv_close"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:text="关闭箱门"
               android:textColor="#ff0988ff"
               android:textSize="10sp" />


       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="7dp"
           android:layout_marginRight="7dp"
           android:layout_marginTop="8dp"
           android:gravity="center"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="horizontal">

               <TextView
                   android:layout_weight="1"
                   android:id="@id/tv_line_02"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_gravity="center"
                   android:background="#ffcccccc" />


               <TextView
                   android:id="@id/tv_num_01"
                   android:layout_width="17dp"
                   android:layout_height="17dp"
                   android:background="@drawable/recycler_tv_shape_circle_num_default"
                   android:gravity="center"
                   android:text="1"
                   android:textColor="#ffffffff"
                   android:textSize="9sp" />

               <TextView
                   android:layout_weight="1"
                   android:id="@id/tv_line_02"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_gravity="center"
                   android:background="#ffcccccc" />

           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="horizontal">

               <TextView
                   android:layout_weight="1"
                   android:id="@id/tv_line_02"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_gravity="center"
                   android:background="#ffcccccc" />


               <TextView
                   android:id="@id/tv_num_01"
                   android:layout_width="17dp"
                   android:layout_height="17dp"
                   android:background="@drawable/recycler_tv_shape_circle_num_default"
                   android:gravity="center"
                   android:text="2"
                   android:textColor="#ffffffff"
                   android:textSize="9sp" />

               <TextView
                   android:layout_weight="1"
                   android:id="@id/tv_line_02"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_gravity="center"
                   android:background="#ffcccccc" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="horizontal">


               <TextView
                   android:layout_weight="1"
                   android:id="@id/tv_line_02"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_gravity="center"
                   android:background="#ffcccccc" />


               <TextView
                   android:id="@id/tv_num_01"
                   android:layout_width="17dp"
                   android:layout_height="17dp"
                   android:background="@drawable/recycler_tv_shape_circle_num_default"
                   android:gravity="center"
                   android:text="3"
                   android:textColor="#ffffffff"
                   android:textSize="9sp" />

               <TextView
                   android:layout_weight="1"
                   android:id="@id/tv_line_02"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_gravity="center"
                   android:background="#ffcccccc" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="horizontal">


               <TextView
                   android:layout_weight="1"
                   android:id="@id/tv_line_02"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_gravity="center"
                   android:background="#ffcccccc" />


               <TextView
                   android:id="@id/tv_num_01"
                   android:layout_width="17dp"
                   android:layout_height="17dp"
                   android:background="@drawable/recycler_tv_shape_circle_num_default"
                   android:gravity="center"
                   android:text="4"
                   android:textColor="#ffffffff"
                   android:textSize="9sp" />

               <TextView
                   android:layout_weight="1"
                   android:id="@id/tv_line_02"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_gravity="center"
                   android:background="#ffcccccc" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="horizontal">


               <TextView
                   android:layout_weight="1"
                   android:id="@id/tv_line_02"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_gravity="center"
                   android:background="#ffcccccc" />


               <TextView
                   android:id="@id/tv_num_01"
                   android:layout_width="17dp"
                   android:layout_height="17dp"
                   android:background="@drawable/recycler_tv_shape_circle_num_focused"
                   android:gravity="center"
                   android:text="5"
                   android:textColor="#ffffffff"
                   android:textSize="9sp" />

               <TextView
                   android:layout_weight="1"
                   android:id="@id/tv_line_02"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_gravity="center"
                   android:background="#ffcccccc" />
           </LinearLayout>



       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="39dp"
        android:orientation="vertical"
        android:background="@drawable/scan_pay_bg">

        <LinearLayout
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@id/tv_line_07"
                android:layout_width="39dp"
                android:layout_height="1dp"
                android:background="#80ffffff" />
            <TextView
                android:id="@id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="饮料瓶回收物"
                android:textColor="#ffffffff"
                android:textSize="11sp" />
            <TextView
                android:id="@id/tv_line_08"
                android:layout_width="39dp"
                android:layout_height="1dp"
                android:background="#80ffffff" />
        </LinearLayout>

        <TextView
            android:id="@id/tv_tip_07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="取货完成"
            android:textColor="#ffffffff"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="53.0dip"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="horizontal"
            android:background="@drawable/recycler_bg_shape_garbage_info">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@id/tv_garbage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="回收货品"
                    android:textColor="#ff999999"
                    android:textSize="7sp" />

                <TextView
                    android:layout_marginTop="1dp"
                    android:id="@id/tv_garbage_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="30个"
                    android:textColor="#ff333333"
                    android:textSize="9sp" />
                </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="支付金额"
                    android:textColor="#ff999999"
                    android:textSize="7sp" />

                <TextView
                    android:layout_marginTop="1dp"
                    android:id="@id/tv_price_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="15元"
                    android:textColor="#ff0988ff"
                    android:textSize="9sp" />
            </LinearLayout>



        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="6dp"
                android:id="@id/tv_tip_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center|left"
                android:text="当前账户余额"
                android:textColor="#ffffffff"
                android:textSize="11sp" />

            <TextView
                android:layout_marginRight="6dp"
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center|left"
                android:text="666.9元"
                android:textColor="#ffffffff"
                android:textSize="11sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@id/btn_again_recycle"
                android:layout_width="133dp"
                android:layout_height="33dp"
                android:background="@drawable/recycler_btn_shape_again"
                android:gravity="center"
                android:text="继续取货"
                android:layout_marginRight="17dp"
                android:textColor="#ffffffff"
                android:textSize="11sp" />

            <Button
                android:id="@id/btn_back_index"
                android:layout_width="133dp"
                android:layout_height="33dp"
                android:background="@drawable/recycler_btn_shape_back"
                android:gravity="center"
                android:text="返回首页"
                android:textColor="#ffffffff"
                android:textSize="11sp" />
        </LinearLayout>


        <TextView

            android:id="@id/tv_tip_08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:text="货品回收已完成，箱门已关闭"
            android:textColor="#ffffffff"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>
    </RelativeLayout>