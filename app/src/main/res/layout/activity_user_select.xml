<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.panda.littlesquirrel.activity.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/top"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/ll_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">
            <include layout="@layout/user_select_goods" />
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="13dp"
            android:id="@+id/ll_buttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/bottom" />
        </FrameLayout>
    </LinearLayout>
    <com.panda.littlesquirrel.view.BackAndTimerView
        android:id="@+id/backAndTime"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="285px"
         />


</RelativeLayout>
